@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<section id="login-section" >
    <div class="row">
        <div class="col-md-4">
            <form id="account" method="post" class="box" >
                <h1>Login</h1>
                @*<div asp-validation-summary="All" class="alert-danger"></div>*@
                <input asp-for="Input.Email" class="form-control" type="text" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <input type="submit" name="" value="Login" />
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="text-light">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" class="text-light" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="text-light" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function GetFavColor() {
            document.body.className = "bg-login";
        });
    </script>
}
@section Css {
    <link href="~/css/Login/Style.css" rel="stylesheet" />
}
