@model IEnumerable<CarShop.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
    <div class="container-fluid-0 m-5">
     
        <div class="row" style="padding-top:50px">
            <div class="col-6">
                <h2 class="text-info">
                    Admin User List
                </h2>
            </div>
            <div class=" col-6 text-right">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="far fa-plus-square"></i>&nbsp; New Admin User</a>
            </div>
        </div>
   
        <div>
            <table class="table table-striped boder">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.PhoneNumber)
                    </th>
                    <th>
                        Disabled
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PhoneNumber)
                        </td>
                        <td>
                            @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                            {
                                <label>Disabled</label>
                            }
                        </td>
                        <td>
                            @if (item.LockoutEnd == null || item.LockoutEnd <= DateTime.Now)
                            {
                                <a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.Id).Replace("%2F","/")">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a type="button" class="btn btn-danger" href="@Url.Action("Delete/"+item.Id).Replace("%2F","/")">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            }
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>

