@model IEnumerable<CarShop.Models.Product>
@{
    ViewData["Title"] = "Index";
}


    <div class="container-fluid-0 m-5" style="padding-top:50px;">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">
                    Product List
                </h2>
            </div>
            <div class=" col-6 text-right">
                <a asp-action="Create" class="btn btn-info"><i class="far fa-plus-square"></i>&nbsp; New Product  </a>
            </div>
        </div>
       
        <div>
            <table class="table table-striped boder">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Available)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ProductTypes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ProductTypes.ProductBrand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SpectialTag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ShadeColor)
                    </th>

                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @string.Format("{0:c}", item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Available)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ProductTypes.Name)
                        </td>
                        <td>

                            @Html.DisplayFor(m => item.ProductTypes.ProductBrand.Name)

                        </td>
                        <td>
                            @if (!item.SpectialTag.Name.Equals("--None--"))
                            {
                                @Html.DisplayFor(m => item.SpectialTag.Name)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ShadeColor)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
   