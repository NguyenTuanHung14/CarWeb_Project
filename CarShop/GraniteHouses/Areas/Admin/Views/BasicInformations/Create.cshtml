@model CarShop.Models.ViewModel.BasicInForViewModel
@using CarShop.Extensions;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>BasicInformation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BasicInformation.Source" class="control-label"></label>
                <input asp-for="BasicInformation.Source" class="form-control" />
                <span asp-validation-for="BasicInformation.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicInformation.Status" class="control-label"></label>
                <input asp-for="BasicInformation.Status" class="form-control" />
                <span asp-validation-for="BasicInformation.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicInformation.InteriorColor" class="control-label"></label>
                <input asp-for="BasicInformation.InteriorColor" class="form-control" />
                <span asp-validation-for="BasicInformation.InteriorColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicInformation.NumberOfDoors" class="control-label"></label>
                <input asp-for="BasicInformation.NumberOfDoors" class="form-control" />
                <span asp-validation-for="BasicInformation.NumberOfDoors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicInformation.SeatNumber" class="control-label"></label>
                <input asp-for="BasicInformation.SeatNumber" class="form-control" />
                <span asp-validation-for="BasicInformation.SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicInformation.ProductId" class="control-label"></label>
                <select asp-for="@Model.BasicInformation.ProductId" class ="form-control" asp-items="Model.Products.ToSelectListItems(Model.BasicInformation.ProductId)"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

